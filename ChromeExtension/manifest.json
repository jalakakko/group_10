{
    "manifest_version": 3,
    "name": "PDIProject",
    "version": "1.1.3",
    "description": "'final touches' -edition",
    "permissions": [
        "scripting",
        "activeTab",
        "notifications",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "tesseract.js",
                "cropper.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js" 
    },
    "icons": {
        "16": "./icons/icon16.png",
        "64": "./icons/icon64.png"
    },

    "host_permissions": ["<all_urls>"]
}